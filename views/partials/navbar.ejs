<head>
  <link rel="stylesheet" href="css/navbar.css">
  <link rel="stylesheet" href="../css/navbar.css">
</head>
<div class="navbody">
  <div id="h-nav" class="navbarTop">
    <div class="col-2">
      <div class="logoClass">
        <img src="../images/lil-logo.png" height="100%" width="100%" alt="Symfony Logo">&nbsp;
        <span  class="logoname">Symfony</span>
      </div>
    </div>
    <div class="col-7 navigate-menu">
      <ul class="flex-row col-7 ulist">
        <li><a href="/">Home</a></li>
        <li><a href="/explore">Explore</a></li>
        <li><a href="/mymusic">My Music</a></li>
      </ul>
      <ul class="flex-row col-4 ulist">
        <li>
          <div class="mainsearch-box">
            <input type="text" class="search-input" placeholder="Enter Song Name!" id="search-input">
            <a class="search-btn" href="#" id="btnLink">
              <img class="imgSearch" src="images/search.svg">
            </a>
          </div>
        </li>
      </ul>
    </div>
    <div class="col-3">
      <ul class="flex-row col-12 ulist">
        <li><a href="/settings">Settings</a></li>
        <li class="username-logout">
          <% if(username) {%>
            <a href="#" class="menu-links" id="userName"><%= username %></a>
            <a href="/logout" class="menu-links" id="logoutBtn">Logout</a>
            <script>
              document.getElementById("userName").onclick=function(){
                document.getElementById("logoutBtn").classList.toggle("hide");
              }
            </script>
          <%}else{%>
            <a href="/login-signup" class="menu-links">Login</a>
          <% } %>
        </li>
      </ul>
    </div>
  </div>
  <div id="v-nav" class="hide">
    <div id="menu-list" class="menu-list-container out-long">
        <div id="menu-items" class="menu-items-container">
            <ul class="menu-items-list">
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li>
                  <% if(username) {%>
                    <a href="" class="menu-links"><%= username %></a>
                  <%}else{%>
                    <a href="/login-signup" class="menu-links">Login</a>
                  <% } %></li>
            </ul>
        </div>
        <div  class="container">
            <div id="event-container" class="button-container">
                <img id="event-opener" src="images/menu-icon.svg" alt="" class="menu-button">
                <img id="event-closer" src="images/close_icon_black2.svg" alt="" class="menu-button hide">
            </div>
        </div>
    </div>
    <div id="top-navbar" class="description-bar">
      <div class="logo-center">
        <img src="../images/lil-logo.png" alt="Symfony Logo">&nbsp;
        <span  class="logoname">Symfony</span>
      </div>
    </div>
  </div>
</div>
<script src="js/navbar.js"></script>